{
  "openapi": "3.0.0",
  "info": {
    "title": "API de projeto-final_filmes",
    "description": "Essa API tem como objetivo o projeto-final_filmes",
    "termsOfService": "http://localhost:3000/projetos",
    "contact": {
        "email": "narlenes092@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
        "url": "http://localhost:3000/v1",
        "description": "API de projeto"
    }
  ],
  "paths":{
    "/filmes":{
      "post": {
        "summary": "Adicionar filmes",
        "description": "Essa rota s√©ra responsavel por adicionar um novo filme",
        "tags": ["Products"],
        "requestBody":{
          "content": {
            "application/json":{
              "schema":{
                "$ref": "#/components/schemas/Products"

              }
            }
          }
        },
        "responses": {
          "201":{
            "description": "Filme adicionado com sucesso :)"
          },
          "200":{
            "description": "OK",
            "content": {
              "application/json":{
                "schema":{
                  "type": "string",
                  "items":{
                    "$ref": "#/components/schemas/Products"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/filmes/buscar/{id}":{
      "get":{
        "description": "Busca um filme pelo id",
        "summary": "Busca um filme pelo id",
        "tags": ["Products"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Nome do filme pelo ID",
            "required": true,
            "schema":{
              "$ref": "#/components/schemas/Products"
            }
          }
        ],
        "responses": {
          "500":{
            "description": "ERRO"
          },
          "200":{
            "description": "OK",
            "content": {
              "application/json":{
                "schema":{
                  "$ref": "#/components/schemas/Products"
                }
              }
            }
          }
        }
      }
    },
    "/atualizar/{id}":{
      "patch":{
        "description": "Atualizar filme pelo ID",
        "summary": "Atualizar filme pelo ID",
        "tags": ["Products"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "atualizar filme pelo ID",
            "required": true,
            "schema":{
              "$ref": "#/components/schemas/Products"
            }
          }
        ],
        "responses": {
          "200":{
            "description": "filme atualizado"
          }
        }
      }
    },
    "/filmes/{id}":{
      "delete":{
        "description": "apagar filme pelo ID",
        "summary": "apagar filme pelo ID",
        "tags": ["Products"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "filme apagado",
            "required": true,
            "schema":{
              "$ref": "#/components/schemas/Products"
            }
          }
        ],
        "responses": {
          "200":{
            "description": "filme apagado"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Products":{
        "type": "string",
        "properties": {
          "name":{
            "type": "string"
          },
          "description":{
            "type": "string" 
          },
          "genero":{
            "type": "string"
          },
          "id":{
            "type": "string"
          }
        }
      }
    }
  }
}  